{
    "name": "presentationmode",
    "displayName": "Presentation Mode",
    "description": "Show your code properly in a presentation",
    "icon": "logo.png",
    "version": "0.0.2",
    "publisher": "jspolancor",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/jspolancor/presentation-mode.git"
    },
    "keywords": [
        "presentation",
        "mode",
        "presentation mode",
        "live"
    ],
    "activationEvents": [
        "onCommand:extension.presentationMode"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.presentationMode",
                "title": "Presentation mode"
            }
        ],
        "keybindings": [{
            "command": "extension.presentationModeExit",
            "key": "escape",
            "when": "editorTextFocus && inZenMode"
        }]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
